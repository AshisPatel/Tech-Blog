<article class="container">
    <div class="row justify-content-center mb-4">
        <h2 class="col-4 text-center bg-cream p-2 text-chocolate round-border floating-shadow">Hello, <span
                class="username">{{username}}</span> !</h2>
    </div>

    <div class="row justify-content-center">
        <form id="new-post-form" class="col-12 bg-chocolate p-2 text-cream round-border floating-shadow">
            <h3>Create a new post</h3>
            <div class="mb-2">
                <label for="title-input" class="d-block mb-2">Title:</label>
                <input type="text" name="title-input" placeholder="Enter post title here..."
                    class="w-100 text-cream round-border p-2" />
            </div>
            <div>
                <label for="text-input" class="d-block mb-2">Content:</label>
                <textarea name="content-input" placeholder="Enter post content here..."
                    class="w-100 round-border text-cream p-2"></textarea>
            </div>


            <button type="submit" class="gradient-btn text-chocolate w-100 p-2 mx-auto my-3 round-border">Submit Post</button>


        </form>
    </div>
    
