    <section class="row justify-content-center my-4">
        <h3 class="col-3 text-center bg-cream text-chocolate round-border floating-shadow p-3">Your Posts:</h3>
    </section>

    <section>
        <ul class="list-group mx-auto w-100">
            {{#each posts as |post|}}
            <li class="list-group-item bg-chocolate text-cream mb-5 post-item round-border">
                {{> post-info post }}
                <div class="d-flex justify-content-end"><span class="pt-2 pe-2"><a href="dashboard/edit/{{post.id}}">Edit Post &rarr;</a></span></div>
            </li>
            {{/each}}
        </ul>
    </section>
