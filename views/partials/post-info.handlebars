<article>
    <div>
        <h3>
            <a href="/post/{{id}}">{{title}}</a>
        </h3>
    </div>
    <div class="sub-content">
        Made by {{user.username}} on {{created_at}}
    </div>
    <div class="post-text px-2 py-2">
        {{format_post_text post_text}}
    </div>
</article>

